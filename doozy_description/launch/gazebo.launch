<?xml version="1.0" ?>

<launch>

	<param command="$(find xacro)/xacro $(find doozy_description)/urdf/doozy.xacro" name="robot_description"/>

	<node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" respawn="false" output="screen"/>

	<node name="joint_state_publisher" pkg="joint_state_publisher" type="joint_state_publisher">
		<param name = "use_gui" value = "False"/>
	</node>

	<node args="-urdf -param robot_description -urdf -model doozy" name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"/>

	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="world_name" default="$(find doozy_description)/worlds/test.world" />  	
		<arg name="paused" value="false"/>
		<arg name="use_sim_time" value="true"/>
		<arg name="gui" value="true"/>
		<arg name="headless" value="false"/>
		<arg name="debug" value="false"/>
	</include>

	<!--<node name="rviz" pkg="rviz" type="rviz" args="-d $(find doozy_description)/launch/model.rviz" />	-->

</launch>
